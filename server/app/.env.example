# TMS Event-Driven Architecture Environment Variables

# Database Connections
POSTGRES_URL=postgresql://tms_user:tms_password@postgres:5432/tms_oltp
TIMESCALE_URL=postgresql://timescale_user:timescale_password@timescaledb:5432/tms_timeseries
NEO4J_URL=bolt://neo4j:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=tms_graph_password

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=kafka:29092
KAFKA_CONSUMER_GROUP=tms-api-group

# API Configuration
API_SECRET_KEY=your_secret_key_here_change_in_production
